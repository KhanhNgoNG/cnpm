doctype html
html
  head
    meta(name="viewport" content="width=device-width, initial-scale=1")

    link(rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.5/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://unpkg.com/nouislider@15.8.1/dist/nouislider.min.css")
    link(rel="stylesheet" href="/public/css/styles.css")
    script(src="https://unpkg.com/nouislider@15.8.1/dist/nouislider.min.js")

    block layout-styles
      style.
        :root {
          /* Primary: green (Christmas) */
          --bs-primary: #0b8f55;
          --bs-primary-rgb: 11,143,85;
          /* Noel red (danger/accents) */
          --bs-danger: #c82333;
          --bs-danger-rgb: 200,35,51;
          /* Body background + text */
          --bs-body-bg: #f3f7f2;
          --bs-body-color: #212529;
        }

        body {
          background-color: var(--bs-body-bg);
        }

        /* Dark navbar/header for Noel contrast */
        header.navbar, .navbar {
          background-color: #0b1920 !important;
        }

        .navbar .nav-link,
        .navbar .navbar-brand {
          color: #f8f9fa !important;
        }

        .navbar .nav-link.active {
          color: #ffdd57 !important;
        }

        main {
          background: transparent;
        }

        /* Beautiful card hover effect */
        .card {
          transition: all .5s;
        }
        .card:hover {
          transform: scale(1.04);
          box-shadow: 0 8px 32px rgba(16, 58, 32, 0.08);
          z-index: 2;
        }

    body.d-flex.flex-column.min-vh-100
        include partials/header

        section.d-flex.flex-fill
            include partials/sidebar
            //- Xin phep giam my-5 thanh my-4 de cho dep hon nha <3
            main.container-fluid.px-4.px-lg-5.my-4
                if navs && navs[activeNav] && navs[activeNav].title != "Users"
                    h2.pb-2.mb-4.border-bottom #{navs[activeNav].title}

                block layout-content


    script(src="https://unpkg.com/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js")
    script(src="https://unpkg.com/iconify-icon")
    block js-imports
    script(src="https://unpkg.com/alpinejs@3.x.x")
